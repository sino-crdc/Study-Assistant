.wrap {
  display: flex;
  width: 90%;
  margin: 20rpx 40rpx 20rpx;
  flex-direction: column;
}
.wrap .title_wrap {
  display: flex;
}
.wrap .title_wrap .title {
  font-size: 36rpx;
  width: 80%;
  margin-bottom: 8rpx;
}
.wrap .title_wrap .chbox {
  margin-left: auto;
  margin-right: 12rpx;
}
.wrap .desc_wrap {
  display: flex;
}
.wrap .desc_wrap .chbox {
  margin-left: 10rpx;
}
.wrap .desc {
  width: 100%;
  margin-left: 6rpx;
  color: #888888;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
