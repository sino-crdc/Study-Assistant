<search 
  value="{{ keyword }}"
  placeholder="Entrez votre mot à rechercher"
  use-action-slot
  bind:search="onSearch"
  bind:change="onChange"
  shape="round"
  background="#1296db"
  left-icon="NULL"
  input-align="center">
    <view class="iconfont icon-sousuo" slot="action" bind:tap="onClick">
      搜索
    </view>
</search>

<van-skeleton 
  title row="3" 
  loading="{{ loading }}"
  wx:for="{{ resultList }}">
    <voc-item bind:tap="onDetail" data-voc="{{ item.title }}" title="{{ item.title }}" meta="{{ item.meta }}"/>
</van-skeleton>


<van-empty wx:if="{{ netErr }}" image="network" description="网络错误"/>

<van-empty wx:if="{{ schErr }}" image="search" description="没有搜到内容"/>